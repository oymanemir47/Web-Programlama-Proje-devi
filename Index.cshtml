@model List<HayvanTuru>

@if (TempData["basarili"] != null)
{
    <h2 style="color:red">@TempData["basarili"]</h2>
}


<div class="container">


    <div class="row pt-3 pb-4">
     <div>  
         <h1>Hayvan Türleri </h1>
     </div>

     </div>




<table class="table table-bordered">
    <thead>
    <tr>
        <th>
            Id
        </th>
        
        <th>
            Hayvan Türü
        </th>
        <th>

        </th>
        <th>

        </th>
    </tr>
    </thead>
    <tbody>

        @foreach(var hayvanTuru in Model)
        {
        <tr>
            
            <td>@hayvanTuru.Id</td>
            <td>@hayvanTuru.Ad</td>
            <td>
            <a asp-controller="HayvanTuru" asp-action="Ekle" asp-route-id="@hayvanTuru.Id" type="button" class="btn btn-primary" style="width:250px">Hayvan Ekle</a>
            </td>
                    <td>
                        <a asp-controller="HayvanTuru" asp-action="Sil" asp-route-id="@hayvanTuru.Id" type="button" class="btn btn-danger"  style="width:250px">Sil</a>
                    </td>
        
        </tr>
        }
    </tbody>






    </table>


    <div class="row pt-3 pb-2">
        <div>
            <a asp-controller="HayvanTuru" asp-action="Ekle" class="btn btn-lg btn-primary" type="button">
                Yeni Hayvan Türü Oluştur
            </a>

        </div>



    </div>



</div>